dir=$1
user=@var_user@
group=@var_group@
mode=@var_mode@
SHELL=@SHELL@

if test ! -d $dir; then

    @install_sh@ -d $dir || exit 1

    if test "@enable_varperm@" = "yes"; then
        test -z "$mode" || chmod $mode  $dir || (rmdir $dir; exit 1)
        test -z "$user"  || chown $user  $dir || (rmdir $dir; exit 1)
        test -z "$group" || (chgrp $group $dir && chmod g+s $dir) || \
          (rmdir $dir; exit 1)
    fi    
fi

exit 0



